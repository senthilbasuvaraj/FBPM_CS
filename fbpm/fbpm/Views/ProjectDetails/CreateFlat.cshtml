@model fbpm.Models.FlatDetail
@{
    ViewBag.Title = "Create";
}

<h2>Add Flat</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm(new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Flat Detail</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.FlatID)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.FlatID, new { @Value = @ViewBag.Message })
            @Html.ValidationMessageFor(model => model.FlatID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ProjectID)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.ProjectID, new { @readonly = "readonly", @Value = @ViewBag.Message })
            @Html.ValidationMessageFor(model => model.ProjectID)
            @Html.HiddenFor(model => model.ProjectID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.SuperBuiltUpArea)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SuperBuiltUpArea)
            @Html.ValidationMessageFor(model => model.SuperBuiltUpArea)
        </div>
        <br />
        <div class="editor-field">
            @Html.LabelFor(model => model.LayoutImage)
        </div>
         <input id="imguploadflatimage" title="Upload the Flat Layout" type="file" name="imguploadflatimage" />
        <p>
            <input type="submit" value="CreateFlat" />
        </p>
    </fieldset>
}   

