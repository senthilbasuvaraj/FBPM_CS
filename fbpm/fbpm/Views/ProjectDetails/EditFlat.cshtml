@model fbpm.Models.FlatDetail

@{
    ViewBag.Title = "EditFlat";
}

<h2>Edit Flat</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("EditFlat", "ProjectDetails", FormMethod.Post, new
            {
                enctype = "multipart/form-data"
                , id = "parentForm"
            })) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Flat Detail</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.FlatID)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.FlatID)
            @Html.ValidationMessageFor(model => model.FlatID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ProjectID)
        </div>
        <div class="editor-field">
            @Html.DisplayFor(model => model.ProjectID)
            @Html.ValidationMessageFor(model => model.ProjectID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.SuperBuiltUpArea)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SuperBuiltUpArea)
            @Html.ValidationMessageFor(model => model.SuperBuiltUpArea)
        </div>
        <div class="editor-field">
        Flat layout: 
        </div>
        <div class="editor-field">
        <img src='/ProjectDetails/GetImage/@Html.DisplayFor(model => model.FlatID)' alt="" />
        </div>
        <div class="editor-field">
            @Html.LabelFor(model => model.LayoutImage)
        </div>
             <input id="file" title="Upload a Flat Layout" type="file" name="file" />
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
