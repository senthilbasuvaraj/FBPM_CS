@model IEnumerable<fbpm.Models.ProjectSchedule>

@{
    Layout = null;
}

<button class="btn btn-primary btn-large" type="button" name="CreateProjSched" onclick="createps();"> Add project Schedules </button>    
<table>
        <tr>
            <th>
                Schedule ID
            </th>
            <th>
                Project ID
            </th>
            <th>
                Schedule Description
            </th>
            <th>
                Schedule Date
            </th>
            <th>
                Schedule Percentage
            </th>
            <th> Actions </th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ScheduleID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ScheduleText)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ScheduleDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SchedulePercentage)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditProjSched", new { id = @Html.DisplayFor(modelItem => item.ScheduleID), pid = @Html.DisplayFor(modelItem => item.ProjectID) }) |
                @Html.ActionLink("Delete", "DeleteProjSched", new { id = @Html.DisplayFor(modelItem => item.ScheduleID), pid = @Html.DisplayFor(modelItem => item.ProjectID) })
            </td>
        </tr>
    }
    
    </table>
<script type="text/javascript" language="javascript">
    function createps() {
        var url = '@Url.Action("CreateProjSched")';
        window.location.href = url;
    }

</script>